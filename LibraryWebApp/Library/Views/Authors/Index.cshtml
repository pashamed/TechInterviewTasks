@model IEnumerable<Library.Models.Author>

@{
    ViewData["Title"] = "Index";
}
<p> <partial name="_AuthorGenrePartial" /> </p>
<h1>Авторы</h1>

<p>
    <a asp-action="Create">Добавить автора</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                Книг в базе
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamilyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoB)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @if (item.Books.Count != null)
                    {
                        @item.Books.Count;
                    }
                    else
                    {
                        <>0</>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FamilyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoB)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AuthorID">Редактирвоать</a> |
                    <a asp-action="Details" asp-route-id="@item.AuthorID">Подробности</a> |
                    <a asp-action="Delete" asp-route-id="@item.AuthorID">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@model IEnumerable<Library.Models.Author>

@{
    ViewData["Title"] = "Index";
}
<p> <partial name="_AuthorGenrePartial" /> </p>
<h1>Authors</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamilyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoB)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoB)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AuthorID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AuthorID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AuthorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
